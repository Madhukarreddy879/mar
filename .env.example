# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/admissions_crm"

# ========================================
# NEXTAUTH.JS CONFIGURATION
# ========================================
# The URL where your app is deployed/running
NEXTAUTH_URL="http://localhost:3000"

# Generate a random secret key for NextAuth.js
# You can generate one using: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"

# ========================================
# JWT CONFIGURATION
# ========================================
# Secret key for JWT token signing
# Generate using: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-here"

# ========================================
# EMAIL CONFIGURATION (Autosend)
# ========================================
# Autosend API Key for sending emails
# Get from: https://autosend.io/dashboard
AUTOSEND_API_KEY="your-autosend-api-key-here"

# Email address to send from
AUTOSEND_SENDER_EMAIL="noreply@yourdomain.com"

# Display name for email sender
AUTOSEND_SENDER_NAME="Admissions CRM"

# Admin email for notifications
ADMIN_NOTIFICATION_EMAIL="admin@yourdomain.com"

# ========================================
# NODE ENVIRONMENT
# ========================================
# Set to 'development' or 'production'
NODE_ENV="development"
